<html>
<head>
    <meta charset="utf-8">
	<title>Go Todo Web App</title>
	<link rel="stylesheet" TYPE="text/css" HREF="static/css/style.css">

	<!-- Libraries -->
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
    <script src="http://ajax.cdnjs.com/ajax/libs/underscore.js/1.1.6/underscore-min.js"></script>
    <script src="http://ajax.cdnjs.com/ajax/libs/backbone.js/0.3.3/backbone-min.js"></script>

	<!-- Scripts -->
	<script src="/static/js/todo.js" type="text/javascript"></script>

	<!-- Initialization -->
	<script>
		$(document).ready(function() {
			Todo.init();
		});
	</script>
</head>
<body>
	<div id="container">
		<h1>Go Todo Web App</h1>
	   	<p id="msg">A simple todo app written in Go.</p>
	   	{{#List}}
	   	<ul id="todo-list">
	   		{{#Items}}
	   		{{#Done}}<li class="todo-item done" data-num="{{Num}}" data-done="true">{{/Done}}
	   		{{^Done}}<li class="todo-item not-done" data-num="{{Num}}" data-done="false">{{/Done}}
	   			<input type="checkbox" class="done-toggle" {{#Done}}checked="checked"{{/Done}} />
	   			<p class="desc">{{Desc}}</p>
	   		</li>
	   		{{/Items}}
	   		<li id="new-item">
	   			<input type="text" id="new-desc" size="50" />
	   		</li>
	   	</ul>
	   	{{/List}}
	</div>
</body>
</html>
